<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/titleMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:textColor="@color/logo_color"
        android:text="Welcome to Vinteract"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/titleMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleMessage1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textColor="@color/logo_color"
        android:gravity="center"
        android:text="Prototype for VideoConferencing"
        android:visibility="visible"/>
    
    <ImageView
        android:id="@+id/welcomeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/logo" 
        android:visibility="visible"/>

    <Button
        android:id="@+id/Interact_mode"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:text="Click here to Interact"
        android:textSize="20sp"
        android:background="@color/logo_color"
        android:textColor="@android:color/black" 
        android:layout_marginBottom="10dp"
        android:visibility="visible"/>

</RelativeLayout>